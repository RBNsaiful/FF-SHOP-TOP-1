
{
  "rules": {
    ".read": false,
    ".write": false,
    
    "config": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "ai_knowledge": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "users": {
      ".read": "auth != null",
      ".indexOn": ["totalEarned", "totalSpent", "totalDeposit", "balance"],
      
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        
        "balance": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "totalEarned": {
          ".validate": "newData.isNumber()"
        },
        "totalSpent": {
          ".validate": "newData.isNumber()"
        },
        "totalDeposit": {
          ".validate": "newData.isNumber()"
        },
        "role": {
          // Role can only be written if it doesn't exist (new user default), 
          // is the same as before (no change), or the writer is an admin.
          ".validate": "!data.exists() || newData.val() === data.val() || root.child('users').child(auth.uid).child('role').val() === 'admin'"
        },
        "isBanned": {
          ".validate": "newData.isBoolean()"
        },
        
        ".validate": "newData.hasChildren(['name', 'email'])"
      }
    },

    "orders": {
      ".indexOn": ["uid", "status"],
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        
        "$orderId": {
          ".validate": "!newData.exists() || root.child('users').child(auth.uid).child('role').val() === 'admin' || (newData.hasChildren(['offer', 'price']) && newData.child('price').isNumber())"
        }
      },
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "transactions": {
      ".indexOn": ["userId", "status"],
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        
        "$txnId": {
           ".validate": "!newData.exists() || root.child('users').child(auth.uid).child('role').val() === 'admin' || (newData.child('amount').isNumber() && newData.child('amount').val() > 0)"
        }
      },
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "notifications": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      "$notifId": {
        ".validate": "newData.hasChildren(['title', 'message'])"
      }
    }
  }
}
