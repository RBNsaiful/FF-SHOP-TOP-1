{
  "rules": {
    ".read": false,
    ".write": false,
    
    "config": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "ai_knowledge": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "users": {
      ".read": "auth != null",
      ".indexOn": ["totalEarned", "totalSpent", "totalDeposit", "balance"],
      
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        
        "balance": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "totalEarned": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "totalSpent": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "totalDeposit": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "totalAdsWatched": {
           ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 50"
        },
        "email": {
          ".validate": "newData.isString() && newData.val().contains('@')"
        },
        "role": {
          ".validate": "!data.exists() || newData.val() === data.val() || root.child('users').child(auth.uid).child('role').val() === 'admin'"
        },
        "isBanned": {
          ".validate": "newData.isBoolean()"
        }
      }
    },

    "orders": {
      ".indexOn": ["uid", "status"],
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        
        "$orderId": {
          // Only allow creation if user has balance (checked via client logic, reinforced here by structure)
          ".validate": "newData.hasChildren(['offer', 'price', 'status', 'date']) && newData.child('price').isNumber()",
          "status": {
             ".validate": "newData.val() === 'Pending' || newData.val() === 'Completed' || newData.val() === 'Failed'"
          }
        }
      },
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "transactions": {
      ".indexOn": ["userId", "status"],
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        
        "$txnId": {
           ".validate": "newData.hasChildren(['amount', 'method', 'transactionId', 'status']) && newData.child('amount').isNumber() && newData.child('amount').val() > 0",
           "status": {
             ".validate": "newData.val() === 'Pending' || newData.val() === 'Completed' || newData.val() === 'Failed'"
           }
        }
      },
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "notifications": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      "$notifId": {
        ".validate": "newData.hasChildren(['title', 'message', 'timestamp'])"
      }
    }
  }
}