{
  "rules": {
    ".read": false,
    ".write": false,
    
    "config": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "ai_knowledge": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "users": {
      ".read": "auth != null",
      ".indexOn": ["totalEarned", "totalSpent", "totalDeposit", "balance"],
      
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        
        ".validate": "newData.hasChildren(['name', 'email']) && (
          (!newData.hasChild('role')) || 
          (newData.child('role').val() === data.child('role').val()) || 
          (root.child('users').child(auth.uid).child('role').val() === 'admin')
        ) && (
          (!newData.hasChild('balance')) || newData.child('balance').isNumber()
        )"
      }
    },

    "orders": {
      ".indexOn": ["uid", "status"],
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        
        "$orderId": {
          // Allow DELETE (!newData.exists) and Allow Full Admin Override regardless of schema
          ".validate": "!newData.exists() || root.child('users').child(auth.uid).child('role').val() === 'admin' || (newData.hasChildren(['offer', 'price']))"
        }
      },
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "transactions": {
      ".indexOn": ["userId", "status"],
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        
        "$txnId": {
           // Allow DELETE (!newData.exists) and Allow Full Admin Override regardless of schema
           ".validate": "!newData.exists() || root.child('users').child(auth.uid).child('role').val() === 'admin' || (newData.child('amount').isNumber())"
        }
      },
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },

    "notifications": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      "$notifId": {
        ".validate": "newData.hasChildren(['title', 'message'])"
      }
    }
  }
}